<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.adolf.demosproject">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ScrollViewActivity" />
        <activity
            android:name=".transition.TransitionBottomActivity"
            android:theme="@style/slideAnim" />
        <activity
            android:name=".transition.TransitionExplodeActivity"
            android:theme="@style/explodeAnim" />
        <activity android:name=".transition.LayoutTransitionActivity" />
        <activity android:name=".transition.TransitionDelayActivity" />
        <activity android:name=".transition.TransitionChangBoundsActivity" />
        <activity android:name=".transition.SharedElementActivity"></activity>
    </application>

</manifest>